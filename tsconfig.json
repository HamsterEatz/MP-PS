{
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  },
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": "src",
    "paths": {
      "@model": [
        "model/index"
      ],
      "@model/*": [
        "model/*"
      ],
      "@controller": [
        "controller/index"
      ],
      "@view": [
        "view/index"
      ],
      "@gSheets": [
        "gSheets/index"
      ],
      "@gSheets/*": [
        "gSheets/*"
      ],
    }
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}